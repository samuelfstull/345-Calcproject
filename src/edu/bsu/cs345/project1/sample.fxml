<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bsu.cs345.project1.Controller">

      <Label text="Triage grading Calculator" />
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">

            <Label text="Input Grades Here" />
            <TextField fx:id="gradefield" alignment="CENTER" onAction="#CalculateGrade" promptText="Input grades here" />

      </VBox>
      <Button mnemonicParsing="false" onAction="#CalculateGrade" text="Calculate">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Button>
   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
      <children>
         <Label text="Output" />
         <TextArea fx:id="outputfield" editable="false" prefHeight="200.0" prefWidth="200.0" />
      </children>
   </VBox>
</VBox>
